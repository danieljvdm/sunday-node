{
  "name": "sunday-node",
  "version": "0.1.0",
  "description": "Node project for Sunday",
  "main": "dist",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src --presets env --source-maps\"",
    "build": "babel src -s -D -d dist --presets env --source-maps",
    "start": "node dist",
    "prestart": "npm run -s build",
    "test": "eslint src"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "linebreak-style": 0,
      "no-console": 0,
      "no-unused-vars": 1,
      "indent": [
        "error",
        2
      ],
      "no-param-reassign": 0
    }
  },
  "repository": "danieljvdm/sunday-node",
  "author": "Louis Barclay <louis.barclay@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.116.0",
    "babel-runtime": "^6.26.0",
    "body-parser": "^1.13.3",
    "compression": "^1.5.2",
    "cors": "^2.8.4",
    "email-templates": "^3.5.1",
    "express": "^4.13.3",
    "html-to-text": "https://github.com/oldlam/node-html-to-text.git",
    "humanize-plus": "^1.8.2",
    "image-size": "^0.6.1",
    "lodash": "^4.17.4",
    "mail-listener4": "https://github.com/lgwb89/mail-listener2",
    "moment": "^2.21.0",
    "mongoose": "^5.4.20",
    "morgan": "^1.8.0",
    "node-email-reply-parser": "^0.1.1",
    "node-schedule": "^1.3.0",
    "nodemailer": "^4.0.1",
    "planer": "^1.1.1",
    "pug": "^2.0.1",
    "resource-router-middleware": "^0.6.0",
    "s3": "^4.4.0",
    "sharp": "^0.20.2",
    "talon": "^2.3.2",
    "timber": "^3.1.3",
    "winston": "next"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^3.1.1",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.1.0",
    "nodemon": "^1.9.2"
  }
}
